@model FinalProject.Models.User

@{
    ViewBag.Title = "Login";
}

<img src="~/images/logo1.png" height="200" />


<form id="login-form"  method="post">
    @Html.AntiForgeryToken()
        <hr>

        <div class="form-group">
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="userID" name="userID" type="text" value="" placeholder="User ID">
                <span class="field-validation-valid text-danger" data-valmsg-for="userID" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input class="form-control" id="password" name="password" type="password" placeholder="Password">
                <span class="field-validation-valid text-danger" data-valmsg-for="password" data-valmsg-replace="true"></span>
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="login-button" value="Login" class="btn btn-default">
            </div>
        </div>
        <hr />
</form>



